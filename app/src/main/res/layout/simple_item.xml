<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip" >

    <ImageView
        android:id="@+id/tweet_listitem_userface"
        style="@style/user_face_image" />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dip"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tweet_listitem_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="张强"
                android:textColor="@color/royalblue"
                android:textSize="@dimen/small_text_size" />

            <ImageView
            android:id="@+id/sexmaletop"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tweet_listitem_username"
             />


            <TextView
                android:id="@+id/questiontime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2012-12-15"
                android:textColor="@color/gray"
                android:textSize="@dimen/micro_text_size" />
        </RelativeLayout>

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >
         	<TextView
			android:id="@+id/tweet_listitem_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/small_text_size"
			android:textColor="@color/gray"
			android:text="服务描述:"/>
           <TextView
               android:id="@+id/listitem_content"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/tweet_listitem_content"
               android:textSize="@dimen/small_text_size"
               android:textColor="@color/gray"
               android:lines="1"
               android:layout_marginLeft="10dip"
               android:text="服务描述"/>
        -</LinearLayout>

        <TextView
            android:id="@+id/tweetcontent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size"
            android:text="评论内容"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tweet_listitem_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:textColor="@color/gray"
                android:textSize="@dimen/micro_text_size"
                android:text="满意度"/>
            <RatingBar
                android:id="@+id/ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:rating = "5"
                android:stepSize="1"/>
            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dip"
                android:src="@drawable/img_star" />-->

           <!-- <TextView
                android:id="@+id/tweet_listitem_commentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dip"
                android:textColor="@color/gray"
                android:textSize="@dimen/micro_text_size" />-->
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical"
        android:background="@color/bg_color">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

         <ImageView
             android:layout_width="35dp"
             android:layout_height="35dp"
             android:layout_marginTop="3dip"
             android:layout_marginLeft="10dip"
             android:src="@drawable/doctor1" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dip"

                android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:text="李云龙 副主任医师"
            android:textSize="@dimen/small_text_size"
            android:textColor="@color/text_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:text="承德附属医院 口腔科"
                    android:textSize="@dimen/micro_text_size"
                    android:textColor="@color/gray"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:text=""/>
    <TextView
        android:id="@+id/tv_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
       android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rect_green"
        android:paddingLeft="3sp"
        android:paddingRight="3sp"
        android:text="追加评价"
        android:textColor="@color/palegreen"
        android:textSize="@dimen/micro_text_size"/>
        <TextView
            android:id="@+id/tvbuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_buy"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rect_green"
            android:layout_alignParentRight="true"
            android:paddingLeft="3sp"
            android:paddingRight="3sp"
            android:text="删除评价"
            android:textColor="@color/black"
            android:textSize="@dimen/micro_text_size"/>
    </LinearLayout>
</LinearLayout>

    </LinearLayout>

