<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/btn_check"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_margin="12dp"
        android:button="@drawable/btn_check" />

    
    <ImageView
        android:id="@+id/img_goods"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/load_logo" />
<LinearLayout  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:text="院外护理"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/tv_goods_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_goods_name"
            android:layout_below="@+id/tv_goods_name"
            android:layout_marginRight="15dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:text="潮诺聚合物苹果移动电源5s充电宝10000毫安以上通用三星小米 金色 天书"
            android:textColor="@color/gray"
            android:textSize="@dimen/micro_text_size" />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_goods_name"
            android:layout_below="@+id/tv_goods_detail"
            android:layout_marginTop="2dp"
            android:text="￥99.00"
            android:textColor="@color/orange"
            android:textSize="@dimen/micro_text_size" />
    </RelativeLayout>
      <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#191B1C" />
</LinearLayout>
</LinearLayout>