<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/divider_color" />

    <TextView
        android:id="@+id/begin_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="2017/3/20 14:52"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/micro_text_size" />
    <TextView
        android:id="@+id/myask_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_alignBottom="@+id/begin_time"
        android:text="待评价"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/micro_text_size" />


    <TextView
        android:id="@+id/myask_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/begin_time"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/img_icon"
        android:text="2010年4月做的阑尾手术，术后伤口一直不愈合，2010年11月再次做了窦道切除手术，至今伤口任然不愈合"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/myask_content"
        android:gravity="center_vertical"
        android:id="@+id/layout">
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="2dp"
            android:background="@color/divider_color" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">


            <com.jims.work.view.CircleImageView
                android:id="@+id/myask_doctorimg"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/doctor_img"
                app:border_color="@color/white"/>

            <TextView
                android:id="@+id/myask_doctorname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/myservice_doctorimg"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@+id/myservice_doctorimg"
                android:text="马云龙"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/micro_text_size" />
            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/myask_doctorname"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@color/divider_color" />
            <TextView
                android:id="@+id/myask_doctorclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/myask_doctorimg"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@+id/myask_doctorimg"
                android:text="神经内科"
                android:textColor="@color/dimgray"
                android:textSize="@dimen/micro_text_size" />
        </LinearLayout>
        <TextView
            android:id="@+id/myask_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="16dp"
            android:text="免费资询"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/micro_text_size" />

    </RelativeLayout>


</RelativeLayout>