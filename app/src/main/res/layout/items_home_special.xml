<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:text="特色服务"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="@dimen/small_middle_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_special"
        android:layout_marginTop="14dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <RelativeLayout
                android:id="@+id/layout_special1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_special_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="家庭医生"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/small_text_size" />

                <ImageView
                    android:id="@+id/ImageView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/img_home_doctor" />

                <TextView
                    android:id="@+id/tv_special_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_special_title"
                    android:layout_below="@+id/tv_special_title"
                    android:text="全天候响应快速"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/micro_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/divider_height_middle"
                android:layout_height="match_parent"
                android:background="#d7d7d7" />

            <RelativeLayout
                android:id="@+id/layout_special2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_special_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="病例查询"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/small_text_size" />

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/img_home_doctor1" />

                <TextView
                    android:id="@+id/tv_special_subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_special_title2"
                    android:layout_below="@+id/tv_special_title2"
                    android:text="关注我的医生"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/micro_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/special_devider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_middle"
            android:background="@color/dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/layout_special3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_special_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="检测结果"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/small_text_size" />

                <ImageView
                    android:id="@+id/ImageView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/img_home_doctor2" />

                <TextView
                    android:id="@+id/tv_special_subtitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_special_title3"
                    android:layout_below="@+id/tv_special_title3"
                    android:text="查询热门科室"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/micro_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/divider_height_middle"
                android:layout_height="match_parent"
                android:background="#d7d7d7" />

            <RelativeLayout
                android:id="@+id/layout_special4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/img_home_doctor3" />

                <TextView
                    android:id="@+id/tv_special_title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="健康档案"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/color_theme"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/tv_special_subtitle4"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_special_title4"
                    android:layout_below="@+id/tv_special_title4"
                    android:text="建立自己的健康档案"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/micro_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/special_devider2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_middle"
            android:layout_marginBottom="10dp"
            android:background="@color/dark" />

        <HorizontalScrollView
            android:id="@+id/layout_special_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/img_banner8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_home_banner1" />

                <ImageView
                    android:id="@+id/img_banner9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_home_banner3" />
            </LinearLayout>
        </HorizontalScrollView>
        <View
            android:id="@+id/special_devider3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height_middle"
            android:layout_marginTop="10dp"
            android:background="@color/dark" />
    </LinearLayout>

</RelativeLayout>