<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                tools:context="com.jims.work.MyHistoryListActivity">
    <RelativeLayout
        android:id="@+id/toolbar_profile"
        style="@style/hospital_title"
        android:orientation="horizontal"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/userinfo_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"

            android:padding="15dp"
            android:src="@drawable/action_bar_back" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="33dp"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/text_view_toolbar_title"
                style="@style/text_20_blacks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="病例记录" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray" />
    <com.jims.work.utils.MyListView

        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="#00000000" >
    </com.jims.work.utils.MyListView>
</RelativeLayout>
