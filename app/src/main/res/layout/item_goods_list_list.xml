<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingTop="8dp" >

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:padding="3dp"
        android:src="@mipmap/load_logo" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/img_icon"
        android:text="李云龙"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_16" />

    <TextView
        android:id="@+id/tv_classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/tv_name"
        android:text="口腔科"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/textSize_14" />

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_name"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/tv_classes"
        android:text="主任医师"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/textSize_14" />

    <TextView
        android:id="@+id/tv_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/img_icon"
        android:text="承德附属医院"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/textSize_14" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hospital"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/img_icon"
         android:textSize="@dimen/textSize_12" 
        android:ellipsize="end"
        android:lines="2"
        android:text="AKG K450 头戴式耳机头戴式耳机头戴式耳机头戴式耳机头戴式耳机头戴式耳机"
        android:textColor="@color/darkgray" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_marginBottom="2dp"
        android:text="￥389.00"
        android:textColor="@color/orange" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_percent"
        android:layout_alignBottom="@+id/tv_percent"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/tv_percent"
        android:text="12386人"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/textSize_13" />

    <ImageView
        android:id="@+id/img_icon_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_price"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/tv_price"
        android:src="@mipmap/product_price_vip" />

    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@+id/tv_price"
        android:layout_alignLeft="@+id/tv_price"
        android:text="好评95%"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/textSize_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_0.5"
        android:layout_below="@+id/tv_percent"
        android:layout_marginTop="8dp"
        android:background="@color/divider_color" />

</RelativeLayout>