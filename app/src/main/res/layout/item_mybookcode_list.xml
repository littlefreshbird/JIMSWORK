<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >



    <TextView
        android:id="@+id/book_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:text="承德市双滦区医院"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/book_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_hospital"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/img_icon"
        android:text="外科--耳鼻喉科"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/book_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/book_class"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/book_class"
        android:text="马云龙"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/small_text_size" />
    <TextView
        android:id="@+id/book_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_alignBottom="@+id/book_class"
        android:text="5元"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/book_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_class"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="2017-2-15  下午"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/small_text_size" />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_time"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:text="就诊人："
        android:textColor="@color/dimgray"
        android:textSize="@dimen/small_text_size" />
    <TextView
        android:id="@+id/book_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_time"
        android:layout_toRightOf="@+id/text"
        android:layout_marginTop="7dp"
        android:layout_alignBottom="@+id/text"
        android:text="王文涛"
        android:textColor="@color/dimgray"
        android:textSize="@dimen/small_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_0.5"
        android:layout_below="@id/book_person"
        android:layout_marginTop="8dp"
        android:background="@color/divider_color" />

</RelativeLayout>